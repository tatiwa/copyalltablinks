{
  "manifest_version": 3,
  "name": "Copy All Tab Links",
  "description": "Copies every tab title and URL from the current window as linked text to the clipboard.",
  "version": "1.1.0",
  "permissions": [
    "tabs",
    "clipboardWrite",
    "scripting",
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Copy All Tab Links",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}
